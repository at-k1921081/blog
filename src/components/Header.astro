---
import Navigation from "./Navigation.astro";
---

<header>
	<h1 id="title">Alex Tsvetanov</h1>
	<nav>
		<Navigation />
	</nav>
</header>

<style>
	header {
		display: flex;
		flex-direction: column;
		align-items: center;
		margin-bottom: 0.5rem;
		padding: 0;
	}

	h1 {
		text-align: center;
		color: white;
	}

	nav {
		background-color: white;
		border: 3px solid blue;
		border-radius: 10px;
		width: 65%;
		height: 100%;
		margin: 0;
	}

	@media screen and (max-width: 700px) {
		nav {
			width: 90%;
		}
	}
</style>
